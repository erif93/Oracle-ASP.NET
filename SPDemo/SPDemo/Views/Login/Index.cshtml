
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Index";
}

<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2>Admin Login</h2>
                    <p>Please enter your email and password</p>
                </div>
                <form id="Logins">
                    <div class="form-group">
                        <input type="text" class="form-control" id="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="password" placeholder="Password">
                    </div>
                    <div class="forgot">
                        <a href="reset.html">Forgot password?</a>
                        <a href="" data-toggle="modal" data-target="#myModal">Registration</a>
                    </div>
                    <button id="submitlogin" onclick="Login()" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="background-color: #daf1e9;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">x</button>
                    <h4 class="modal-title" id="myModalLabel">Supplier Form</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Your Name:</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter your name" name="name">
                    </div>
                    <div class="form-group">
                        <label for="newemail">Email:</label>
                        <input type="email" class="form-control" id="newemail" placeholder="Enter new email" name="newemail">
                    </div>
                    <div class="form-group">
                        <label for="newpwd">Password:</label>
                        <input type="password" class="form-control" id="newpwd" placeholder="New password" name="newpwd">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="Save" onclick="Save()" style="cursor: pointer;font-weight: bold;">Add</button>
                    <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="Edit()">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="cursor: pointer;font-weight: bold;">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section Scripts{
    <script src="~/Scripts/Login.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}